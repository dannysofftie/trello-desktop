{
  "name": "trello-desktop",
  "productName": "Trello",
  "desktopName": "Trello",
  "version": "1.0.0",
  "description": "Unofficial Trello desktop app",
  "license": "MIT",
  "repository": "danielchatfield/trello-desktop",
  "author": {
    "name": "Daniel Chatfield",
    "email": "chatfielddaniel@gmail.com",
    "url": "http://www.danielchatfield.com"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "test": "xo && stylelint 'src/style/*.css'",
    "release": "electron-builder --publish always",
    "start": "electron ."
  },
  "files": [
    "index.js",
    "browser.js",
    "browser.css",
    "static/Icon.icns",
    "static/Icon.png",
    "static/Icon.ico"
  ],
  "keywords": [
    "electron-app",
    "trello"
  ],
  "dependencies": {
    "auto-launch": "^5.0.1",
    "electron-config": "^2.0.0",
    "electron-context-menu": "^0.15.1",
    "electron-debug": "^3.0.1",
    "electron-dl": "^1.14.0"
  },
  "devDependencies": {
    "electron": "^7.1.1",
    "electron-builder": "^21.2.0",
    "xo": "0.25.3"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0
    }
  },
  "build": {
    "appId": "com.danielchatfield.trello-desktop",
    "files": [
      "**/*",
      "!media${/*}",
      "!docs${/*}"
    ],
    "linux": {
      "category": "Utilities",
      "description": "Unofficial Trello desktop app",
      "synopsis": "Elegant Unofficial Trello desktop app",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "license": "license.md"
    },
    "snap": {
      "grade": "stable",
      "confinement": "strict"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    }
  }
}
